{
  "compilerOptions": {
    "baseUrl": "./src",
    //"declaration": true,
    //"declarationDir": "dist/drawtools4x",
    "experimentalDecorators": true,
	"inlineSourceMap": false,
    "module": "amd",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noResolve": false,
    "noUnusedLocals": true,
    "outDir": "dist/drawtools4x",
    //"outFile": "dist/drawtools4x/DrawTools.js",
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*.ts",
    "./interfaces/*.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "samples/",
    "dist/",
    "node_modules/**/*.*"
  ]
}