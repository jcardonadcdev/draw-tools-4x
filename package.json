{
  "name": "draw-tools-4x",
  "version": "1.0.0",
  "description": "Simple draw tools for the ArcGIS JavaScript API 4.x version. These are for temporary use until the official tools are released by Esri",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcardonadcdev/draw-tools-4x.git"
  },
  "devDependencies": {
    "@types/arcgis-js-api": "^4.3.1",
    "concurrently": "^3.5.0",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  },
  "scripts": {
    "build": "tsc",
    "build-sample": "tsc -p sample/tsconfig.json",
    "build-all": "tsc && tsc -p sample/tsconfig.json",
    "watch": "concurrently \"tsc --watch --inlineSourceMap\" \"tsc -p sample/tsconfig.json --watch --inlineSourceMap\"",
    "tslint": "tslint -p tsconfig.json -e **/node_modules/** && tslint -p sample/tsconfig.json"
  },
  "keywords": [
    "arcgis",
    "javascript",
    "drawtools"
  ],
  "author": "James Cardona",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jcardonadcdev/draw-tools-4x/issues"
  },
  "homepage": "https://github.com/jcardonadcdev/draw-tools-4x#readme"
}
