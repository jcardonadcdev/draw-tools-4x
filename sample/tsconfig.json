{
  "compilerOptions": {
    "baseUrl": "../src",
    "experimentalDecorators": true,
	"inlineSourceMap": false,
    "module": "amd",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "../src/**/*.ts"
  ]
}